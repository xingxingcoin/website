{% if content.blocks|default([])|length %}
    <div class="blocks">
        {% for block in content.blocks %}
            <div class="blocks__item">
                {% if xing is defined %}
                    {% include 'includes/blocks/' ~ block.type ~ '.html.twig' with {
                        content: block,
                        view: view.blocks[loop.index0],
                        xing: xing
                    } only %}
                {% else %}
                    {% include 'includes/blocks/' ~ block.type ~ '.html.twig' with {
                        content: block,
                        view: view.blocks[loop.index0]
                    } only %}
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endif %}
