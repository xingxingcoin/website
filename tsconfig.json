{
  "compilerOptions": {
    "target": "ES6",
    "module": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": [
    "assets/website/ts/src/**/*.ts",
    "assets/website/ts/__tests__/**/*.ts"
  ]
}
